    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug REPL",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tasp",
                    "--package=tasp"
                ],
                "filter": {
                    "name": "tasp",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug 'test.tsp'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tasp",
                    "--package=tasp"
                ],
                "filter": {
                    "name": "tasp",
                    "kind": "bin"
                }
            },
            "args": [
                "test.tsp"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'tasp'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=tasp"
                ],
                "filter": {
                    "name": "tfmt",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                ],
                "filter": {
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
